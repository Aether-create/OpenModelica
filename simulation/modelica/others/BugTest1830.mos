loadString("
model try
  Real x(start = 1);
algorithm
  when x >= 7 then
    reinit(x, 5);
  end when;
equation
  der(x) = 1 ;
end try;
"); getErrorString();

simulate(try,stopTime=10,numberOfIntervals=100); getErrorString();
val(x,0);
val(x,7);
val(x,8);
val(x,9);
val(x,10);

