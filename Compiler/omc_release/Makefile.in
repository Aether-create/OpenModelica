#
# Makefile for omc
#
# $Id$
#

LIBSOCKET = @LIBSOCKET@
LIBLPSOLVE55 = @LIBLPSOLVE55@

USE_CORBA = @USE_CORBA@

SHELL	= /bin/sh
CC	= @CC@
OMPCC = @OMPCC@
CFLAGS	= @CFLAGS@
RMLHOME	= @rmlhome@
RMLINC  = -I$(RMLHOME)/include/plain
FMILIB = -lfmilib -lOpenModelicaFMIRuntimeC

EXEEXT  = @EXEEXT@

srcdir = ..
top_builddir = ../..

ifdef USE_CORBA
 CORBALIBS=@CORBALIBS@
else
 CORBALIBS=
endif

LDFLAGS = @LDFLAGS@ -lm -L$(RMLHOME)/lib/plain -lrml $(LIBSOCKET) $(CORBALIBS) $(LIBLPSOLVE55) -L../../build/lib/omc @RPATH@ @OMC_LIBS@ -lgc -lexpat @RT_LDFLAGS_GENERATED_CODE@

PROG = omc
RMLC	= @rmlc_bin@
RML	= $(RMLHOME)/bin/rml
RMLCFLAGS = -Wr,-Wshow-warnings@RML_TRACE@,$(RMLC_INCLUDE_ALL_DIRS)

MAKETARGET = Makefile
include $(srcdir)/Makefile.compiler_subdirs.common
.testvariables:
	# You're using the proper Unix Makefile. Thanks for making my life easier.

$(PROG): $(SRCO) $(SUBDIRS)
	$(OMPCC) $(CFLAGS) -o $(PROG)$(EXEEXT) $(SRCO) $(AST) $(RTOBJ) $(LDFLAGS) $(FMILIB) -lstdc++

nolink: $(SRCO) $(SUBDIRS)
