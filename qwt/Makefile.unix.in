top_builddir=@top_builddir@

QMAKE=@QMAKE@
NAME=OMPlot

.PHONY: always $(NAME)

all: build

Makefile: qwt.pro
	@rm -f $@
	@test ! -z "$(QMAKE)" || (echo QMAKE variable was not set; false)
	$(QMAKE) QMAKE_CXX=@CXX@ qwt.pro
clean:
	test ! -f Makefile || $(MAKE) -f Makefile clean
	rm -rf build lib Makefile
	rm -rf src/debug src/moc src/release src/Makefile* src/object_script*
	rm -rf textengines/Makefile

$(NAME): Makefile
	$(MAKE) -f Makefile

build: $(NAME) Makefile.unix

Makefile.unix: Makefile.unix.in
	cd $(top_builddir) && ./config.status
