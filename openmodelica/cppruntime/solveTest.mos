// name: solveTest
// keywords: external F77 LAPACK
// status: correct
// teardown_command: rm -f *SolveTest*

setCommandLineOptions("+simCodeTarget=Cpp");

loadModel(Modelica);
loadString("
model SolveTest
  Real[:, :] A = [0, 1; 2, 3];
  Real[:] b = {4, 5};
  input Real u = 0; // prevent presolving during translation
  output Real[2] x;
equation
  x = Modelica.Math.Matrices.solve(A, (u + 1) * b);
end SolveTest;
");
getErrorString();

simulate(SolveTest);
val(x[1], 1);
val(x[2], 1);
getErrorString();

